<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_registered"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/pink"
    android:fitsSystemWindows="true"
    tools:context="com.hypers.www.bluetoothdemo.registered.RegisteredActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="107dp"
        android:text="已有账号?请登录"
        android:textColor="#99ffffff"
        android:textSize="14dp"
        />

    <Button
        android:layout_width="260dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="148dp"
        android:background="@drawable/btn_login"
        android:text="开启RENO之旅"
        android:textColor="#ffffff"
        android:textSize="18dp"
        />

    <RelativeLayout
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="247dp">

        <RelativeLayout
            android:id="@+id/rl_account"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_account"
                android:layout_width="19dp"
                android:layout_height="19dp"
                android:layout_alignParentBottom="true"
                android:layout_centerVertical="true"
                android:layout_marginBottom="7dp"
                android:src="@mipmap/account"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="12dp"
                android:layout_toRightOf="@id/iv_account"
                android:background="@null"
                android:cursorVisible="true"
                android:gravity="bottom"
                android:hint="请输入用户名/手机号码"
                android:maxLength="30"
                android:singleLine="true"
                android:textColor="#7fffff"
                android:textColorHint="#7fffff"
                android:textCursorDrawable="@null"
                android:textSize="14dp"/>

        </RelativeLayout>

        <View
            android:id="@+id/view_line1"
            android:layout_width="260dp"
            android:layout_height="1dp"
            android:layout_below="@id/rl_account"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:background="#99ffffff"
            />

        <RelativeLayout
            android:id="@+id/rl_psw"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_below="@id/view_line1"
            android:layout_marginLeft="20dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_psw"
                android:layout_width="19dp"
                android:layout_height="19dp"
                android:layout_alignParentBottom="true"
                android:layout_centerVertical="true"
                android:layout_marginBottom="7dp"
                android:src="@mipmap/psw"/>

            <EditText
                android:id="@+id/et_psw"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="48dp"
                android:layout_toRightOf="@id/iv_psw"
                android:background="@null"
                android:cursorVisible="true"
                android:gravity="bottom"
                android:hint="请输入密码"
                android:maxLength="30"
                android:singleLine="true"
                android:textColor="#7fffff"
                android:textColorHint="#7fffff"
                android:textCursorDrawable="@null"
                android:textSize="14dp"/>


            <View
                android:id="@+id/view_line3"
                android:layout_width="1dp"
                android:layout_height="22dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="7dp"
                android:layout_marginRight="48dp"
                android:background="#99ffffff"
                />

            <ImageView
                android:id="@+id/iv_psw_visibility"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="7dp"
                android:layout_marginRight="16dp"
                android:src="@mipmap/close_eye"
                />

        </RelativeLayout>

        <View
            android:id="@+id/view_line2"
            android:layout_width="260dp"
            android:layout_height="1dp"
            android:layout_below="@id/rl_psw"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:background="#99ffffff"
            />

        <RelativeLayout
            android:id="@+id/rl_psw_repeat"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_below="@id/view_line2"
            android:layout_marginLeft="20dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_psw_repeat"
                android:layout_width="19dp"
                android:layout_height="19dp"
                android:layout_alignParentBottom="true"
                android:layout_centerVertical="true"
                android:layout_marginBottom="7dp"
                android:src="@mipmap/psw_repeat"/>

            <EditText
                android:id="@+id/et_psw_repeat"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="48dp"
                android:layout_toRightOf="@id/iv_psw_repeat"
                android:background="@null"
                android:cursorVisible="true"
                android:gravity="bottom"
                android:hint="请重复输入密码"
                android:maxLength="30"
                android:singleLine="true"
                android:textColor="#7fffff"
                android:textColorHint="#7fffff"
                android:textCursorDrawable="@null"
                android:textSize="14dp"/>


            <View
                android:id="@+id/view_line4"
                android:layout_width="1dp"
                android:layout_height="22dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="7dp"
                android:layout_marginRight="48dp"
                android:background="#99ffffff"
                />

            <ImageView
                android:id="@+id/iv_psw_visibility2"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="7dp"
                android:layout_marginRight="16dp"
                android:src="@mipmap/close_eye"
                />

        </RelativeLayout>

        <View
            android:id="@+id/view_line5"
            android:layout_width="260dp"
            android:layout_height="1dp"
            android:layout_below="@id/rl_psw_repeat"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:background="#99ffffff"
            />


    </RelativeLayout>


    <RelativeLayout
        android:layout_width="93dp"
        android:layout_height="93dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="424dp"
        android:background="@drawable/avatar"
        >

        <com.makeramen.roundedimageview.RoundedImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:riv_corner_radius="40dp"
            android:layout_centerInParent="true"
            android:background="@mipmap/ic_launcher"
            android:elevation="2dp"
            />

        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="18dp"
            android:layout_marginRight="18dp"
            android:src="@mipmap/camera"
            android:elevation="3dp"
            />

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="注册"
        android:textColor="#ffffff"
        android:textSize="20dp"
        />

    <RelativeLayout
        android:id="@+id/rl_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="14dp"
        android:paddingTop="14dp"
        android:paddingRight="25dp"
        android:paddingBottom="25dp"
        >

        <ImageView
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:src="@mipmap/back"
            />

    </RelativeLayout>


</RelativeLayout>
