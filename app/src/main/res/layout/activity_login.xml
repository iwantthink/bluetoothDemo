<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/pink"
    android:fitsSystemWindows="true"
    tools:context=".login.v.LoginActivity"
    >

    <ImageView
        android:layout_width="190dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="436dp"
        android:src="@mipmap/logo_white"
        />

    <RelativeLayout
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="296dp">

        <RelativeLayout
            android:id="@+id/rl_account"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_account"
                android:layout_width="19dp"
                android:layout_height="19dp"
                android:layout_alignParentBottom="true"
                android:layout_centerVertical="true"
                android:layout_marginBottom="7dp"
                android:src="@mipmap/account"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="12dp"
                android:layout_toRightOf="@id/iv_account"
                android:background="@null"
                android:cursorVisible="true"
                android:gravity="bottom"
                android:hint="请输入用户名/手机号码"
                android:maxLength="30"
                android:singleLine="true"
                android:textColor="#7fffff"
                android:textColorHint="#7fffff"
                android:textCursorDrawable="@null"
                android:textSize="14dp"/>

        </RelativeLayout>

        <View
            android:id="@+id/view_line1"
            android:layout_width="260dp"
            android:layout_height="1dp"
            android:layout_below="@id/rl_account"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:background="#99ffffff"
            />

        <RelativeLayout
            android:id="@+id/rl_psw"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_below="@id/view_line1"
            android:layout_marginLeft="20dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_psw"
                android:layout_width="19dp"
                android:layout_height="19dp"
                android:layout_alignParentBottom="true"
                android:layout_centerVertical="true"
                android:layout_marginBottom="7dp"
                android:src="@mipmap/psw"/>

            <EditText
                android:id="@+id/et_psw"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="48dp"
                android:layout_toRightOf="@id/iv_psw"
                android:background="@null"
                android:cursorVisible="true"
                android:gravity="bottom"
                android:hint="请输入密码"
                android:maxLength="30"
                android:singleLine="true"
                android:textColor="#7fffff"
                android:textColorHint="#7fffff"
                android:textCursorDrawable="@null"
                android:textSize="14dp"/>


            <View
                android:id="@+id/view_line3"
                android:layout_width="1dp"
                android:layout_height="22dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="7dp"
                android:layout_marginRight="48dp"
                android:background="#99ffffff"
                />

            <ImageView
                android:id="@+id/iv_psw_visibility"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="7dp"
                android:layout_marginRight="16dp"
                android:src="@mipmap/close_eye"
                />

        </RelativeLayout>

        <View
            android:id="@+id/view_line2"
            android:layout_width="260dp"
            android:layout_height="1dp"
            android:layout_below="@id/rl_psw"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:background="#99ffffff"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_func"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="263dp"
        >

        <TextView
            android:id="@+id/tv_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="注册账号"
            android:textColor="#B2FFFFFF"
            android:textSize="12dp"
            />

        <TextView
            android:id="@+id/tv_find_psw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="找回密码"
            android:textColor="#B2FFFFFF"
            android:textSize="12dp"
            />

    </RelativeLayout>

    <Button
        android:layout_width="260dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="145dp"
        android:background="@drawable/btn_login"
        android:text="登录"
        android:textColor="#ffffff"
        android:textSize="18dp"
        />

    <RelativeLayout
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="100dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="第三方登录"
            android:textColor="#ffffff"
            />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="127dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="48dp">

        <ImageView
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:layout_alignParentLeft="true"
            android:src="@mipmap/qq"
            />

        <ImageView
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:layout_alignParentRight="true"
            android:src="@mipmap/wechat"
            />
    </RelativeLayout>

</RelativeLayout>
